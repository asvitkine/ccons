#!/usr/bin/expect -f
log_user 0
set timeout 2

proc check {input output} {
    send "$input\n"
    expect timeout {
	send_user "Failed: input \"$input\" did not result in \"$output\" \n"
	exit
    } "$output"
}

spawn ../../ccons
send "#define XYZ 123\n"
check "XYZ;" "=> (int) 123"
send "#undef XYZ\n"
send "#define XYZ 100\n"
check "XYZ;" "=> (int) 100"

send "#define X \\\n"
send   "\\\n"
send "25\n"

check "X;" "=> (int) 25"

check "#include <xyz.abc>" "Note: Last line ignored due to errors."

send "#define P(x) ((x)+1)\n"
check "P(5);" "=> (int) 6"

send "#define DO(s) \\n"
send "do { \\n"
send   "puts(s); \\n"
send "} while (0)\n"
send "#include <stdio.h>"
check "P(\"Hi\");" "Hi"

